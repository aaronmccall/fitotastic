light-grey = #bebcc0

#mffs_modal

  h2
    font-size: 24px

  .modal_contents
    padding-top: 0

  .widget-subsection:first-of-type
    padding: 6px 12px

  .mffs_friend
    position: relative
    display: block

    img.friend_pp
      width: 128px
      height: 128px

    &:hover
      .mffs_detail
        display: block

    &.followed
      .mffs_user:after, em:after
        content: "\00a0\2714"
        
    &.unfollowed
      opacity: 0.5      

  .mffs_user,
  .mffs_level
    position: absolute
    top: 1px
    left: 2px
    color: #1da6da
    text-shadow: 1px 1px 1px #000, 0px 0px 3px rgba(255, 255, 255, 0.8)

  .mffs_level
    left: auto;
    right: 8px;

  .mffs_detail
    display: none
    position: absolute
    width: 200px
    top: 16px
    left: 16px
    z-index: 3
    padding: .25em .5em
    border-radius: 4px
    border: none
    background: #f4f5f5
    box-shadow: 3px 3px 6px #444

    textarea
      height: 48px

    li
        &.info
         white-space: pre-line
    .unfollow
        position: absolute
        top: -4px
        right: -1em
        -webkit-transform: scale(0.6)
        transform: scale(0.6)

  .convo
    position: relative
    margin-bottom: -10px
    z-index: 1
    display: inline-block
    height: 24px
    width: 24px
    background: url('/site_media/images/master-sprite.png?v080612') no-repeat
    background-position: -504px -16px
    -webkit-transform: scale(0.75)

    &:hover
      .mffs_detail
        display: block
        padding: 6px
        font-size: 2rem

  .proppable
    position: relative

    &:hover 
      .mffs_detail
        display: block

    .mffs_activity
      padding-left: 12px
      position: relative
      &.note
        &:before
          position: absolute
          left: -6px
          width: 21px
          height: 18px
          content: "\270D"
          font-size: 18px

      &.mffs_pr
        color: #8bc53f
        &.note
          padding-left: 21px
          &:before
            left: 5px
        &:after
          position: absolute
          left: 0px
          top: 3px
          width: 8px
          height: 8px
          content: ""
          background: url('/site_media/images/master-sprite.png?v080612') no-repeat
          background-position: -224px 0px


  .proppables
    font-size: 1.05em
    height: 30px

    .mffs_detail
      left: 30px
      top: 2px

    .propped::before
      z-index: 2
      pointer-events: none
      position: absolute
      content: ""
      width: 32px
      height: 16px
      top: -10px
      left: -1px
      background: url('data:image/png;base64,') no-repeat

    .propped img
      opacity: 0.6

    .proppable img
      height: 30px
      width: 30px

    .no-work
      color: #933

    h4 span
      margin-left: 1em
      display: inline-block
      font-size: .75em
      color: #0F536D

  .mffs_nav
    position: absolute
    top: 12px
    left: 152px
    width: 300px

    .prop_all
      position: absolute
      top: -8px
      right: -100px

    .mffs_next,
    .mffs_prev
      line-height: 150%
      height: 1.5em
      position: absolute
      top: 0

    .mffs_next
      text-align: right
      right: 0px
    .mffs_prev
      left: 0px

    a
      min-width: 1em
      max-width: 1.5em
      font-size: 1.5em
      text-align: center
      text-decoration: none
      border-radius: 4px

      &:hover,
      &.mffs_active
        background: #C6E9F6
        color: #0F536D

  .mffs_pages
    margin: 0 1.5em
    border: 1px solid #ccc
    border-width: 0px 1px
    overflow: hidden
    height: 35px

  .mffs_goto
    display: inline-block
    line-height: 150%
    height: 1.5em
    margin-right: .15em

  table tr
    &:nth-of-type(n+3) .mffs_detail
      top: auto
      bottom: 20px

    td
      border: none
      width: 140px
      padding-left: 0

      &:nth-child(n+4) .mffs_detail
        left: auto
        right: 30px